<launch>

<group ns="map_merge">
  <node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
    <param name="robot_map_topic" value="map"/>
    <param name="robot_namespace" value=""/>
    <param name="merged_map_topic" value="map"/>
    <param name="world_frame" value="merge/map"/>
    <param name="known_init_poses" value="true"/>
    <param name="merging_rate" value="6.0"/>
    <param name="discovery_rate" value="0.2"/>
    <param name="estimation_rate" value="0.5"/>
    <param name="estimation_confidence" value="1.0"/>
  </node>
</group>


<!-- x和y正向增加的时候图像向相反移动 -->
<group ns="robot_1/map_merge">
  <param name="init_pose_x" value="0.0"/>
  <!-- <param name="init_pose_y" value="-32.0"/> -->
  <param name="init_pose_y" value="0.0"/>
  <param name="init_pose_z" value="0.0"/>
  <param name="init_pose_yaw" value="0.0"/>
</group>

<group ns="robot_2/map_merge">
<!-- 测试时将init_pose_x设置为10 -->
  <param name="init_pose_x" value="0.0"/>         
  <!--param name="init_pose_y" value="-1.0"/-->
  <!-- <param name="init_pose_y" value="32.0"/> -->
  <param name="init_pose_y" value="0.0"/>
  <param name="init_pose_z" value="0.0"/>
  <param name="init_pose_yaw" value="0.0"/>
</group>

<group ns="robot_3/map_merge">
<!-- 测试时将init_pose_x设置为-30 -->
  <param name="init_pose_x" value="0.0"/>
  <!--param name="init_pose_y" value="-1.0"/-->
  <param name="init_pose_y" value="0.0"/>
  <param name="init_pose_z" value="0.0"/>
  <param name="init_pose_yaw" value="0.0"/>
</group>

<group ns="robot_4/map_merge">
  <param name="init_pose_x" value="0.0"/>
  <!-- <param name="init_pose_y" value="-32.0"/> -->
  <param name="init_pose_y" value="0.0"/>
  <param name="init_pose_z" value="0.0"/>
  <param name="init_pose_yaw" value="0.0"/>
</group>

</launch>
